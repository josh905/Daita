<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="daita.daita.MainActivity"
    android:background="@drawable/low_opac_back">

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_map"
        app:backgroundTint="@android:color/holo_green_dark" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="231dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/house_transp"
        android:id="@+id/imageView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Choose a Location"
            android:layout_width="290dp"
            android:layout_height="56dp"
            android:layout_marginTop="80dp"
            android:id="@+id/chooseBtn"
            android:textSize="15sp"
            android:background="@color/colorAccent"
            android:layout_alignTop="@+id/findBtn"
            android:layout_alignRight="@+id/sloganTF"
            android:layout_alignEnd="@+id/sloganTF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Information by Location"
            android:editable="false"
            android:ems="10"
            android:id="@+id/sloganTF"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Find my Location"
            android:layout_width="290dp"
            android:layout_height="56dp"
            android:id="@+id/findBtn"
            android:background="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/sloganTF"
            android:layout_alignRight="@+id/sloganTF"
            android:layout_alignEnd="@+id/sloganTF" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
